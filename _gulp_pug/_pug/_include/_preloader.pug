mixin searchBody
  nav.search__tab
    ul.nav(role="tablist")
      li: a#search-tab-1.active(href="#search-1" data-toggle="tab" role="tab" aria-controls="search-1" aria-selected="true") Поиск по артикулу
      li: a#search-tab-2(href="#search-2" data-toggle="tab" role="tab" aria-controls="search-2" aria-selected="false") ПОиск по машине
      li: a#search-tab-3(href="#search-3" data-toggle="tab" role="tab" aria-controls="search-3" aria-selected="false") Запрос по vin

  .tab-content
    .tab-pane.active#search-1(role='tabpanel' aria-labelledby='search-tab-1')
      .search__form
        div
          .search__form-input
            input(type="text" placeholder="Введите ваш запрос, например ОАЕ 12345679").form-control
        div
          button(type="button").btn.btn-primary.btn-lg Найти

